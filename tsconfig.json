{
  "compilerOptions": {
    "incremental": true,
    "target": "ES6",
    "module": "commonjs",
    "lib": [
      "ES6",
      "DOM",
      "DOM.Iterable",
      "scripthost"
    ],
    "outDir": "dist",
    "importHelpers": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "lib/**/*",
    "types/**/*.d.ts",
    "package.json"
  ],
  "exclude": [
    ".vscode",
    "node_modules"
  ]
}